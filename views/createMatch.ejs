<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/head %>
  </head>
  <body>
    <div class="container">
      <% include ./partials/header %>
      <div class="row">
        <div class="col-md-offset-4">
          <h1><%= title %></h1>
        </div>
      </div>
      <form action='/matches/new' method='post'>
        <div class="row">
          <div class="col-md-offset-3">
            <div class="form-group col-md-3">
              <label for="userOne">User One</label>
              <input name="username1" type="text" class="form-control" id="user_id1" placeholder="Username" />
            </div>
            <div class="col-md-1">
              <h2>VS</h2>
            </div>
            <div class="form-group col-md-3">
              <label for="userTwo">User Two</label>
              <input name="username2" type="text" class="form-control" id="user_id2" placeholder="Username" />
            </div>
          </div>
        </div>
          <div class="row">
          <div class="col-md-offset-2 col-md-3">
            <input name="score1"type="text" id="score_1" class="form-control" placeholder="user 1 score" />
          </div>
          <div class="col-md-1">
            <h3>to</h3>
          </div>
          <div class="col-md-3">
            <input name="score2" type="text" id="score_2" class="form-control" placeholder="user 2 score" />
          </div>
        </div>
        <div class="row">
          <div class="text-center">
            <button type="submit" class="btn btn-default">Submit</button>
          </div>
        </div>
      </form>
    </div>
    <footer>
      <% include ./partials/footer %>
    </footer>
    <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js" integrity="sha512-K1qjQ+NcF2TYO/eI3M6v8EiNYZfA95pQumfvcVrTHtwQVDG+aHRqLi/ETn2uB+1JqwYqVG3LIvdm9lj6imS/pQ==" crossorigin="anonymous"></script>
  </body>
</html>
